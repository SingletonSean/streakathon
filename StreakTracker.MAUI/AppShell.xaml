<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StreakTracker.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:StreakTracker.MAUI.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <ShellContent
        Title="Streaks"
        ContentTemplate="{DataTemplate pages:HomeView}"
        Route="Home" />

    <ShellContent
        Title="Add Streak"
        ContentTemplate="{DataTemplate pages:AddStreakView}"
        Route="AddStreak" />
</Shell>
