<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Streakathon.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Streakathon.MAUI.Pages"
    Title="Streakathon"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <ShellContent
        Title="Sign In"
        ContentTemplate="{DataTemplate pages:SignInView}"
        Route="SignIn" />

    <ShellContent
        Title="Sign Up"
        ContentTemplate="{DataTemplate pages:SignUpView}"
        Route="SignUp" />

    <ShellContent
        Title="Streaks"
        ContentTemplate="{DataTemplate pages:HomeView}"
        Route="Streaks" />
</Shell>
